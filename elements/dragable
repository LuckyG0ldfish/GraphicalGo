package elements

import (
	"image"
	"image/color"

	sub "github.com/LuckyG0ldfish/GraphicalGo/elements/subelements"
	g "github.com/AllenDang/giu"
	"github.com/AllenDang/imgui-go"
)

type Dragable interface {
	GetID()

	GetXLeft() int
	GetXRight() int
	GetYLeft() int
	GetYRight() int

	SetXLeft(int)
	SetXRight(int)
	SetYLeft(int)
	SetYRight(int)
} 

func (D *Dragable) Dragable() bool{
	pos image.Point
	pos = g.GetCursorPos() 
	
	if pos.X > xLeft && pos.X < xRight && pos.Y > yLeft && pos.Y < yRight {
		return true 
	}
	return false 	
}

